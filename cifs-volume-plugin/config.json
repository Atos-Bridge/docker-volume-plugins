{
    "description": "CIFS plugin for Docker",
	"documentation": "https://github.com/trajano/docker-volume-plugins/",
    "entrypoint": ["/cifs-volume-plugin"],
    "env": [
        {
            "name": "CREDENTIAL_PATH",
            "settable": [
                "value"
            ],
            "value": "/root/credentials"
        }
    ],
	"network": {
        "type": "host"
    },
	"mounts": [
        {
            "destination": "/root",
            "source": "/root",
            "type": "bind",
            "options": [ "rbind", "readonly" ]
        }
    ],
    "propagatedMount": "/var/lib/docker-volumes",
	"interface" : {
        "types": ["docker.volumedriver/1.0"],
        "socket": "cifs.sock"
	},
	"linux": {
        "capabilities": ["CAP_SYS_ADMIN"]
	}
}
