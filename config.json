{
    "description": "GlusterFS plugin for Docker",
	"documentation": "https://github.com/trajano/glusterfs-volume-plugin/",
    "entrypoint": ["/glusterfs-volume-plugin"],
    "env": [
        {
            "name": "SERVERS",
            "settable": [
                "value"
            ],
            "value": ""
        }
    },
	"network": {
        "type": "host"
    },
    "devices": [
        {
            "path": "/dev/fuse"
        }
    ],
    "propagatedMount": "/var/lib/docker/volumes",
	"interface" : {
        "types": ["docker.volumedriver/1.0"],
        "socket": "gfs.sock"
	},
	"linux": {
		"capabilities": ["CAP_SYS_ADMIN"]
	}
}
